<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentActivity"
    android:background="@drawable/background"
    >

    <TextView
        android:id="@+id/HeyText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:drawableRight="@drawable/ic_smile"
        android:drawablePadding="10px"
        android:paddingLeft="10px"
        android:paddingTop="10px"
        android:paddingRight="20px"
        android:paddingBottom="10px"
        android:text="שלום סטודנט:"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <Button
        android:id="@+id/btnTags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/input_background"
        android:drawableTop="@drawable/ic_baseline_school_24"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="תגיות"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="@+id/StudentID"
        app:layout_constraintStart_toStartOf="@+id/StudentID"
        app:layout_constraintTop_toBottomOf="@+id/StudentID" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_background"
        android:drawableRight="@drawable/ic_logout_"
        android:text="התנתקות"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.953" />

    <Button
        android:id="@+id/changePassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_background"
        android:drawableTop="@android:drawable/ic_secure"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="שינוי סיסמה"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="@+id/btnTags"
        app:layout_constraintStart_toStartOf="@+id/btnTags"
        app:layout_constraintTop_toBottomOf="@+id/btnTags" />

    <EditText
        android:id="@+id/StudentID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/HeyText"
        app:layout_constraintStart_toStartOf="@+id/HeyText"
        app:layout_constraintTop_toBottomOf="@+id/HeyText" />

    <Button
        android:id="@+id/btnEdditInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:drawableTop="@drawable/ic_settings"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="עדכון פרטים אישיים"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="@+id/changePassword"
        app:layout_constraintStart_toStartOf="@+id/changePassword"
        app:layout_constraintTop_toBottomOf="@+id/changePassword" />

    <Button
        android:id="@+id/Personinfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:drawableTop="@drawable/ic_info"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="מידע אישי"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="@+id/btnEdditInfo"
        app:layout_constraintStart_toStartOf="@+id/btnEdditInfo"
        app:layout_constraintTop_toBottomOf="@+id/btnEdditInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>