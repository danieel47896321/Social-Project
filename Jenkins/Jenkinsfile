pipeline {
    agent {
        label 'android'
    }
    stages {
        stage('Build App') {
            steps {
                // Run the app
                sdkPackage "build-tools;31.0.0"
                sdkPackage "platforms;android-31"
                sh './gradlew :app:assembleDebug'
                sh './gradlew :app:assembleDebugAndroidTest'
                sh './gradlew SocialProjectSCE'
            }
        }
        stage('Tests') {
            steps {
                // run the tests
                sh './gradlew test'
            }
        }
        stage('Finished') {
            steps {
                //print finished
                echo 'Finished'
            }
        }
    }
}
