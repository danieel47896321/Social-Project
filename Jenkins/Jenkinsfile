pipeline {
    agent {
        label 'android'
    }
    stages {
        stage('Start Build') {
            steps {
                bitbucketStatusNotify(buildState: 'INPROGRESS')
            }
        }
        stage('Build App') {
            steps {
                // Clean and assemble APKs
                sh './gradlew clean assembleDebug assembleRelease'
            }
        }
        stage('Tests') {
            steps {
                // Clean and assemble APKs
                sh './gradlew clean assembleDebug assembleRelease'
            }
        }
        stage('Finished') {
            steps {
                echo 'Finished'
            }
        }
    }
}
