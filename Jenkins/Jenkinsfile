pipeline {
    agent {
        label 'android'
    }
    stages {
        stage('Build App') {
            steps {
                // Run the app
                sh './gradlew clean assembleDebug assembleRelease'
            }
        }
        stage('Tests') {
            steps {
                // run the tests
                sh './gradlew test'
            }
        }
        stage('Finished') {
            steps {
                //print finished
                echo 'Finished'
            }
        }
    }
}
