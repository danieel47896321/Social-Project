<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/rView"
    android:paddingLeft="10px"
    android:paddingTop="10px"
    tools:context=".UserFuncs.MainScreen">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:drawableLeft="@drawable/ic_smile"
        android:drawablePadding="10px"
        android:paddingLeft="10px"
        android:paddingTop="10px"
        android:paddingRight="20px"
        android:paddingBottom="10px"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonTags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_background"
        android:drawableTop="@drawable/ic_baseline_school_24"
        android:text="Tags"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="@+id/personFullName"
        app:layout_constraintStart_toStartOf="@+id/personFullName"
        app:layout_constraintTop_toBottomOf="@+id/personFullName" />

    <Button
        android:id="@+id/buttonRequest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_background"
        android:drawableTop="@drawable/ic_baseline_email_24"
        android:text="Requests"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonPersonalinfo"
        app:layout_constraintStart_toStartOf="@+id/buttonPersonalinfo"
        app:layout_constraintTop_toBottomOf="@+id/buttonPersonalinfo" />

    <Button
        android:id="@+id/buttonChangePassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_background"
        android:drawableTop="@android:drawable/ic_secure"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Change Password"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonTags"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonTags"
        app:layout_constraintTop_toBottomOf="@+id/buttonTags" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_background"
        android:drawableRight="@drawable/ic_logout_"
        android:text="Logout"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <EditText
        android:id="@+id/personFullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/welcomeText"
        app:layout_constraintStart_toStartOf="@+id/welcomeText"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText" />

    <Button
        android:id="@+id/buttonEdditInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:drawableTop="@drawable/ic_settings"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Edit Info"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonChangePassword"
        app:layout_constraintStart_toStartOf="@+id/buttonChangePassword"
        app:layout_constraintTop_toBottomOf="@+id/buttonChangePassword" />

    <Button
        android:id="@+id/buttonPersonalinfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:drawableTop="@drawable/ic_info"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Personal Info"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonEdditInfo"
        app:layout_constraintStart_toStartOf="@+id/buttonEdditInfo"
        app:layout_constraintTop_toBottomOf="@+id/buttonEdditInfo" />

    <Button
        android:id="@+id/DayBackground"
        android:layout_width="119dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/button_background"
        android:text="Light Mode"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/NightBackground"
        app:layout_constraintEnd_toStartOf="@+id/NightBackground"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/NightBackground"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/NightBackground"
        android:layout_width="136dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:background="@drawable/button_background"
        android:text="Dark Mode"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRequest" />

    <Button
        android:id="@+id/TeacherBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/button_background"
        android:text="Good Luck"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/AdminBackground"
        app:layout_constraintEnd_toStartOf="@+id/AdminBackground"
        app:layout_constraintStart_toStartOf="@+id/DayBackground"
        app:layout_constraintTop_toTopOf="@+id/AdminBackground" />

    <Button
        android:id="@+id/AdminBackground"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_background"
        android:text="Happy Holiday"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/NightBackground"
        app:layout_constraintStart_toStartOf="@+id/NightBackground"
        app:layout_constraintTop_toBottomOf="@+id/NightBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>